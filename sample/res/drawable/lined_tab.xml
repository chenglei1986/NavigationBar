<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape>
                    <solid android:color="@color/nv_transparent"/>
                    <padding
                        android:bottom="6dp"
                        android:left="16dp"
                        android:right="16dp"
                        android:top="6dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/nv_black"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape>
                    <solid android:color="@color/nv_transparent"/>
                    <padding
                        android:bottom="6dp"
                        android:left="16dp"
                        android:right="16dp"
                        android:top="6dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/nv_gray"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape>
                    <solid android:color="@color/nv_transparent"/>
                    <padding
                        android:bottom="6dp"
                        android:left="16dp"
                        android:right="16dp"
                        android:top="6dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/nv_gray"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>