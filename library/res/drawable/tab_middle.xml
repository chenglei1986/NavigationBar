<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <selector>

            <item android:state_checked="true">
                <shape>
                    <solid android:color="@color/nv_white"/>
                    <padding
                        android:bottom="6dp"
                        android:left="16dp"
                        android:right="16dp"
                        android:top="6dp"/>
                </shape>
            </item>

            <item android:state_pressed="true">
                <shape>
                    <solid android:color="@color/nv_white"/>
                    <padding
                        android:bottom="6dp"
                        android:left="16dp"
                        android:right="16dp"
                        android:top="6dp"/>
                </shape>
            </item>

            <item>
                <shape>
                    <solid android:color="@color/nv_blue"/>
                    <padding
                        android:bottom="6dp"
                        android:left="16dp"
                        android:right="16dp"
                        android:top="6dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/nv_white"/>
                </shape>
            </item>

        </selector>
    </item>
</layer-list>